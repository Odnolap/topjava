<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

        <bean class="ru.javawebinar.topjava.repository.mock.InMemoryUserRepositoryImpl" id="inMemoryUserRepository"/>

        <bean class="ru.javawebinar.topjava.service.UserServiceImpl" id="userServiceImpl">
            <property name="repository" ref="inMemoryUserRepository"/>
        </bean>

        <bean class="ru.javawebinar.topjava.repository.mock.InMemoryUserMealRepositoryImpl" id="inMemoryUserMealRepository"/>

        <bean class="ru.javawebinar.topjava.service.UserMealServiceImpl" id="userMealService">
            <property name="repository" ref="inMemoryUserMealRepository"/>
        </bean>


        <bean class="ru.javawebinar.topjava.web.user.ProfileRestController" id="profileRestController">
            <property name="service" ref="userServiceImpl"/>
        </bean>
        <bean class="ru.javawebinar.topjava.web.user.AdminRestController" id="adminRestController">
                <property name="service" ref="userServiceImpl"/>
        </bean>

        <bean class="ru.javawebinar.topjava.web.meal.UserMealRestController" id="userMealRestController">
            <property name="service" ref="userMealService"/>
        </bean>

